{
  "name": "vfx-pipeline-companion",
  "version": "1.0.0",
  "description": "VFX Freelancer Pipeline Management App",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run delay-electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "delay-electron": "ping 127.0.0.1 -n 6 > nul && npm run electron:dev",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "kill-ports": "taskkill /f /im node.exe /im python.exe /im electron.exe 2>nul & for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :3000 ^| findstr LISTENING') do taskkill /f /pid %a 2>nul & for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :8000 ^| findstr LISTENING') do taskkill /f /pid %a 2>nul & echo VFX Pipeline processes terminated",
    "kill": "taskkill /f /im node.exe /im python.exe /im electron.exe 2>nul || echo No processes killed",
    "restart": "npm run kill-ports && timeout /t 2 && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && pip install -r requirements.txt",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "clean": "rimraf dist frontend/dist backend/__pycache__ backend/*.pyc",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "vfx",
    "pipeline",
    "freelancer",
    "desktop",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "rimraf": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.vfxpipeline.companion",
    "productName": "VFX Pipeline Companion",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/*.pyc",
      "!backend/data/*.db*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__",
          "!*.pyc"
        ]
      }
    ]
  }
}